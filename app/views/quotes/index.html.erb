<h1>Quotes</h1>
<div class="well">
  <%= link_to "New Quote", new_quote_path, class: "btn btn-primary" %>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>Type</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @quotes.size == 0 %>
      <tr>
        <td colspan="6">No quotes found.</td>
      </tr>
    <% else %>
      <% @quotes.each do |quote| %>
        <tr>
          <td><%= quote.title %></td>
          <td><%= quote.author %></td>
          <td><%= quote.body %></td>
          <td><%= quote.type %></td>
          <td>
            <%= link_to "Edit", edit_quote_path(quote), class: "btn btn-default" %>
          </td>
          <td>
            <%= button_to "Delete", quote, method: :delete, data: { confirm: "Are you sure you wwant to delete this quote?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>